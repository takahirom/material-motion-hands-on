<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="375">
    <targets>
        <target android:excludeId="@id/fab" />
    </targets>
    <transition
        class="com.github.takahirom.motion_app.animation.transition.AsymmetricTransform"
        android:interpolator="@android:interpolator/fast_out_slow_in" />
    <changeTransform android:interpolator="@android:interpolator/fast_out_slow_in" />
    <changeClipBounds android:interpolator="@android:interpolator/fast_out_slow_in" />
    <changeImageTransform android:interpolator="@android:interpolator/fast_out_slow_in" />
    <pathMotion class="com.github.takahirom.motion_app.animation.transition.GravityArcMotion" />
</transitionSet>